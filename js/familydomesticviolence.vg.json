{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/vflo0002/3179/refs/heads/main/data/familydomesticviolence.csv"
  },
  "title": {
    "text": "By State",
    "fontSize": 18,
    "color": "dodgerblue"
  },
  "width": 100,
  "height": 210,
  "config": {
    "view": {"stroke": "transparent"},
    "arc": {"fill": "steelblue"}
  },
  "params": [
    {
      "name": "selectedYear",
      "value": 2014,
      "bind": {
        "input": "range",
        "min": 2014,
        "max": 2023,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "transform": [
    {
      "filter": "year(datum.Year) == selectedYear"
    }
  ],
  "mark": {"type": "arc", "innerRadius": 10, "outerRadius": 80},
  "encoding": {
    "theta": {
      "aggregate": "sum",
      "field": "Number of Offense",
       "type": "quantitative",
      "stack" : true},
    "color": {
      "field": "State", 
      "type": "nominal",
      "legend": {
        "title": "State",
        "labelFontSize": 6.5,
        "orient": "bottom",
        "columns": 2
      }
    },
    "tooltip": [
      {"field": "State", "type": "nominal"},
      {"field": "Year", "type": "ordinal"},
      {"aggregate": "sum", 
      "field": "Number of Offense", 
      "type": "quantitative", 
      "format": ","}
    ]
  },
  "view": {
    "stroke": null
  }
}
