{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/vflo0002/3179/refs/heads/main/data/offencebyyear.csv"
    },
    "transform": [
      {
        "filter": {"selection": "offenceFilter"}
      }
    ],
    "selection": {
      "offenceFilter": {
        "type": "multi",
        "fields": ["Offence"],
        "bind": {
          "input": "select",
          "options": [null, "Homicide and related offences", "Sexual assault", "Kidnapping/abduction", "Blackmail/extortion", "Unlawful entry with intent"],
          "labels": ["All", "Homicide and Related Offences", "Sexual Assault", "Kidnapping/Abduction", "Blackmail/Extortion", "Unlawful Entry with Intent"],
          "name": "Filter by Offence: "
        }
      }
    },
    "mark": "line",
    "encoding": {
      "x": {
        "field": "Year",
        "type": "ordinal",
        "axis": {"title": "Year"}
      },
      "y": {
        "field": "Number",
        "type": "quantitative",
        "axis": {"title": "Number of Offences"}
      },
      "color": {
        "field": "Offence",
        "type": "nominal",
        "scale": {
          "domain": ["Homicide and related offences", "Sexual assault", "Kidnapping/abduction", "Blackmail/extortion", "Unlawful entry with intent"],
          "range": ["#1f77b4", "#ff7f0e", "#2ca02c", "#d62728", "#9467bd"]
        },
        "legend": {"title": "Type of Offence"}
      },
      "tooltip": [
        {"field": "Year", "type": "ordinal"},
        {"field": "Number", "type": "quantitative"},
        {"field": "Offence", "type": "nominal"}
      ]
    },
    "config": {
      "line": {
        "point": true
      }
    }
  }