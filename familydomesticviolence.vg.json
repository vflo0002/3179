{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/vflo0002/3179/refs/heads/main/data/familydomesticviolence.csv"
  },
  "title": {
    "text": "Family and Domestic Violence Incidents",
    "subtitle": "Interactive Analysis by Year and State",
    "fontSize": 20,
    "color": "dodgerblue"
  },
  "width": 500,
  "height": 500,
  "config": {
    "view": {"stroke": "transparent"},
    "arc": {"fill": "steelblue", "stroke": "white"}
  },
  "params": [
    {
      "name": "selectedYear",
      "value": 2014,
      "bind": {
        "input": "range",
        "min": 2014,
        "max": 2023,
        "step": 1,
        "name": "Year: "
      }
    }

  ],
  "transform": [
    {
      "filter": "year(datum.Year) == selectedYear"
    }
  ],
  "mark": {"type": "arc", "innerRadius": 35, "outerRadius": 200},
  "encoding": {
    "theta": {
      "aggregate": "sum",
      "field": "Number of Offense",
       "type": "quantitative",
      "stack" : true},
    "color": {
      "field": "State", 
      "type": "nominal",
      "legend": {"title": "State"}
    },
    "tooltip": [
      {"field": "State", "type": "nominal"},
      {"field": "Year", "type": "ordinal"},
      {"aggregate": "sum", 
      "field": "Number of Offense", 
      "type": "quantitative", 
      "format": ","}
    ]
  },
  "view": {
    "stroke": null
  }
}
