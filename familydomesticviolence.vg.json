{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Interactive Polar Chart of Family and Domestic Violence-related Offenses by Sex, Selectable by Year and State",
  "data": {
    "url": "familydomesticviolence.csv"
  },
  "transform": [
    {
      "filter": {"selection": "selectYear"}
    },
    {
      "filter": {"selection": "selectState"}
    }
  ],
  "params": [
    {
      "name": "selectYear",
      "bind": {
        "input": "select",
        "options": [2014, 2015, 2016, 2017, 2018, 2019, 2020, 2021, 2022, 2023],
        "labels": ["2014", "2015", "2016", "2017", "2018", "2019", "2020", "2021", "2022", "2023"],
        "name": "Year: "
      }
    },
    {
      "name": "selectState",
      "bind": {
        "input": "select",
        "options": ["New South Wales", "Victoria", "Queensland", "South Australia", "Western Australia", "Tasmania", "Northern Territory", "Australian Capital Territory"],
        "name": "State: "
      }
    }
  ],
  "mark": {
    "type": "arc",
    "tooltip": true
  },
  "encoding": {
    "theta": {
      "field": "Number of Offense",
      "type": "quantitative",
      "stack": true
    },
    "color": {
      "field": "Sex",
      "type": "nominal",
      "legend": {
        "title": "Sex"
      },
      "scale": {
        "domain": ["Males", "Females"],
        "range": ["#1f77b4", "#e377c2"]
      }
    },
    "opacity": {
      "value": 0.9
    }
  },
  "view": {
    "stroke": null
  }
}
